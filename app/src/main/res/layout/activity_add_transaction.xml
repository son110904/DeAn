<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="@string/add_transaction_title"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Transaction Type Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_segmented_container"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/btnNewIncome"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_segmented_selected"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/add_transaction_income_tab"
                    android:textColor="@color/primary_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnNewExpense"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="@string/add_transaction_expense_tab"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Amount Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_card"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_transaction_amount_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_pill"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp">

                    <EditText
                        android:id="@+id/edtAmount"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="@string/hint_amount"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_light"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_transaction_currency_label"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAccountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/add_transaction_account_from"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbBank"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_pill"
                        android:layout_marginBottom="8dp"
                        android:paddingStart="16dp"
                        android:text="@string/add_transaction_account_bank"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbCredit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_pill"
                        android:layout_marginBottom="8dp"
                        android:paddingStart="16dp"
                        android:text="@string/add_transaction_account_credit"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rbCash"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_pill"
                        android:paddingStart="16dp"
                        android:text="@string/add_transaction_account_cash"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/categorySection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/add_transaction_category_label"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_pill"
                        android:paddingHorizontal="16dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/add_transaction_date_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtDate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_pill"
                    android:hint="@string/add_transaction_date_hint"
                    android:inputType="date"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_light"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/add_transaction_note_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNote"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_pill"
                    android:hint="@string/add_transaction_note_hint"
                    android:inputType="textCapSentences"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_light"
                    android:textSize="15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_button_primary"
                android:text="@string/add_transaction_confirm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/card_background"
        android:elevation="8dp"
        app:itemIconTint="@color/primary_blue"
        app:itemTextColor="@color/text_secondary"
        app:menu="@menu/bottom_menu" />
</RelativeLayout>
